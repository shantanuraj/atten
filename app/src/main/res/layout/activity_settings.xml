<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/app_background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_settings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hint_developer"
        android:id="@+id/atten_text_dev"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"/>


    <Button
        style="@style/AppTheme.MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHANTANU RAJ"
        android:id="@+id/atten_btn_shantanu"
        android:layout_below="@+id/atten_text_dev"
        android:layout_centerHorizontal="true"/>

    <Button
        style="@style/AppTheme.MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SWAPNIL RAJ"
        android:id="@+id/atten_btn_swapnil"
        android:layout_below="@+id/atten_btn_shantanu"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hint_delete"
        android:id="@+id/delete_text"
        android:layout_above="@+id/delete_button"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/AppTheme.MaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_delete"
        android:textColor="@color/button_delete"
        android:id="@+id/delete_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
